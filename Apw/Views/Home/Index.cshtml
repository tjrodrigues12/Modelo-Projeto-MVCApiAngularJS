@{
    Layout = "~/Views/_LayoutPage.cshtml";
}

<div class="breadcrumbs" id="breadcrumbs">
    <script type="text/javascript">
        try { ace.settings.check('breadcrumbs', 'fixed') } catch (e) { }
    </script>

    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="#">Inicio</a>
        </li>
    </ul>
</div>

<div class="page-content" cg-busy="[loadTela]">

    <div class="page-header">
        <h1>
            Inicio
        </h1>
    </div>

    <div class="row">
        <div class="col">
            <div class="widget-box">
                <div class="widget-header">
                    <h5>Seja Bem Vindo</h5>
                </div>

                <div class="widget-body">
                    <div class="widget-main">
                        @*<p class="alert alert-info">
                            Este é o Sistema de Gestão Educacional Técnica.
                        </p>*@

                        <div class="container">
                            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                                <!-- Indicators -->
                                <ol class="carousel-indicators">
                                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                                    <li data-target="#myCarousel" data-slide-to="1"></li>
                                    <li data-target="#myCarousel" data-slide-to="2"></li>
                                </ol>

                                <!-- Wrapper for slides -->
                                <div class="carousel-inner">

                                    <div class="item active">
                                        <img src="~/assets/img/img1.png" alt="Nome1" style="width:100%;">
                                        <div class="carousel-caption">
                                            <h3>Nome 1</h3>
                                            <p>Descrição 1</p>
                                        </div>
                                    </div>

                                    <div class="item">
                                        <img src="~/assets/img/img2.png" alt="Nome2" style="width:100%;">
                                        <div class="carousel-caption">
                                            <h3>Nome 2</h3>
                                            <p>Descrição 2</p>
                                        </div>
                                    </div>

                                    <div class="item">
                                        <img src="~/assets/img/img3.png" alt="Nome3" style="width:100%;">
                                        <div class="carousel-caption">
                                            <h3>Nome 3</h3>
                                            <p>Descrição 3</p>
                                        </div>
                                    </div>

                                </div>

                                <!-- Left and right controls -->
                                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                                    <span class="glyphicon glyphicon-chevron-left"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                                    <span class="glyphicon glyphicon-chevron-right"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
