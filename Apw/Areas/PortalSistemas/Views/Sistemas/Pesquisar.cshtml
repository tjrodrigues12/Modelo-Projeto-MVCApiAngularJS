@{
    Layout = null;
}

<style>
    .widget-color-dark {
        border-color: #c3c3c3;
    }

        .widget-color-dark > .widget-header {
            text-decoration-color: #000000 !important;
            border-color: #c3c3c3;
            background: #c3c3c3;
        }
</style>

<div class="breadcrumbs" id="breadcrumbs">
    <script type="text/javascript">
        try { ace.settings.check('breadcrumbs', 'fixed') } catch (e) { }
    </script>

    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="#">Portal de Sistemas</a>
        </li>
        <li class="active">Sistemas</li>
    </ul>
</div>

<div class="page-content" cg-busy="[loadSistema]">
    <div class="page-header">
        <h1>
            Sistemas
        </h1>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <div ng-repeat="x in sistemas">
                <div class="col-xs-6 col-sm-3 pricing-box" style="width: 250px; padding-top: 20px">
                    <div class="widget-box widget-color-dark">
                        <div class="widget-header">
                            <h5 class="widget-title bigger dark" style="font-weight: bold">{{x.sigla}}</h5>
                        </div>

                        <div class="widget-body" style="height: 80px">
                            <div class="widget-main">
                                @*<img src="{{x.imagemSistema}}" style="height: 40px; width: 40px"  />*@
                                <span ng-bind="x.nomeSistema" style="font: bold"></span>
                            </div>
                        </div>
                        <div class="widget-footer">
                            <div>
                                <a href={{x.linkSistema}} class="btn btn-block btn-sm btn-success no-border" target="_blank">
                                    <i class="ace-icon fa fa-check"></i>
                                    <span>Acessar</span>
                                </a>
                            </div>

                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>